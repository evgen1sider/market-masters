{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "overrides": [
    {
      "files": ["src/scripts/utils.js", "src/scripts/**/__tests__/*.js"],
      "env": { "node": true, "browser": false },
      "parserOptions": { "sourceType": "script" }
    }
  ],
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}
